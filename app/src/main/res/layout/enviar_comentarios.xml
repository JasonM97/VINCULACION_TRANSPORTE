<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background="@color/white_trasnparent"
    android:layout_height="match_parent">



    <!-- ENCABEZADO DE LA PAGINA FORMULARIO -->

    <!-- IMAGEN DEL BUS -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/rounded_encabezado"
        tools:ignore="NewApi">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="35dp"
            android:bufferType="spannable"
            android:text="COMENTARIOS"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:bufferType="spannable"
            android:text="SUGERENCIAS"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="100dp"
            android:bufferType="spannable"
            android:text="--------"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/btnMenuPrincipal"
            android:layout_width="36dp"
            android:layout_height="35dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/icono_menu"
            android:contentDescription="TODO"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/avatar"
        tools:ignore="NewApi">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/azul"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="ENVIANOS TUS QUEJAS O SUGERENCIAS "/>

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Nombre"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Apellido"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />


    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Correo Electronico"
        android:inputType="text|date"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtCelular"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Numero Celular"
        android:inputType="text|number"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText

        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Escriba una descripcion"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />


    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/azul"
        android:text="ENVIAR"
        android:textColor="@color/white"/>


    <!-- SESSION DE CONTACTO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="520dp"
        android:textColor="@color/azul"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="CONTACTANOS"/>


    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/icono_call_center"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/boton_redondeado"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/icono_whasahap"/>

    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/boton_redondeado"
        android:layout_marginStart="280dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/icono_llamar"/>

    <!-- SESSION DE HORARAIO DE ATENCION -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="690dp"
        android:textColor="@color/azul"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="HORARIOS DE ATENCIÃ“N"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="710dp"
        android:textColor="@color/azul"
        android:textSize="15sp"
        android:text="Lunes - Viernes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="730dp"
        android:textColor="@color/azul"
        android:textSize="14sp"
        android:text="8:00 am A 17:00 pm"/>




</androidx.coordinatorlayout.widget.CoordinatorLayout>