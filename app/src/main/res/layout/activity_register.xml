<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white_trasnparent"
    tools:ignore="NewApi"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">



    <!-- ENCABEZADO DE LA PAGINA FORMULARIO -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/rounded_encabezado"
        tools:ignore="NewApi">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="225dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:bufferType="spannable"
            android:text="FORMULARIO"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="73dp"
            android:bufferType="spannable"
            android:text="DE REGISTRO"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- IMAGEN DEL BUS -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="65dp"
        android:background="@drawable/icono_bus"
        tools:ignore="NewApi">

    </FrameLayout>

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Nombre"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Apellido"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtCelular"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Numero Celular"
        android:inputType="text|number"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtFechaNacimiento"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Fecha Nacimiento"
        android:inputType="text|date"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Correo Electronico"
        android:inputType="text|date"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtContraseña"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/rounded_edittext_bakgraund_azul"
        android:breakStrategy="balanced"
        android:hint="Direccion"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/azul"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/btnSubirImagen"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/icono_subirfoto"
        android:contentDescription="TODO"
        tools:ignore="RtlHardcoded" />
    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="500dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/azul"
        android:text="REGISTRARSE"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txtVolver"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="660dp"
        android:bufferType="spannable"
        android:text="Volver al Inicio"
        android:textColor="@color/black"
        android:typeface="sans"
        android:textSize="14sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
